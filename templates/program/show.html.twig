{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>{{ program.year }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>

			{% for season in seasons %}
				<a href="{{ path("program_season_show", {programId: program.id, seasonId: season.id}) }}">
					Saison n°{{ season.number }}</a>
			{% endfor %}

		</div>
	</div>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
