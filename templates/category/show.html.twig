{% extends 'base.html.twig' %}

{% block title %}All categories
{% endblock %}

{% block body %}

	{% for program in programs %}
		<img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div>
			<h2>
				{{ program.id }}
				<a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a>
			</h2>
			<p>{{ program.synopsis }}</p>
			{# Lien vers la fiche de la catégorie : #}
		</div>
	{% else %}
		Aucune catégories trouvée.
	{% endfor %}

	<a href="{{ path('category_index') }}">
		Retour à la liste des catégories
	</a>
{% endblock %}
